<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SebhaFragment">


    <ImageView
        android:id="@+id/sebha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/sebha_img"
        />
    <TextView
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sebha"
        app:layout_constraintHeight_percent="0.06"
        />
    <TextView
        android:id="@+id/sebhaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/space2"
        android:text="عدد التسبيحات"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sebhaText"
        app:layout_constraintHeight_percent="0.03"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sebhaCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/space3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintHeight_percent="0.09"
        android:background="@drawable/brown_button"
        android:text=""
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sebhaCount"
        app:layout_constraintHeight_percent="0.025"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sebhaCountbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/space4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.07"
        android:background="@drawable/oval_button"
        android:text="سبحان الله"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>